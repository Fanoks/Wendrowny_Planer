#:kivy 2.3.0
#:import NoTransition kivy.uix.screenmanager.NoTransition

MDFloatLayout:
    ScreenManager:
        id: scr
        transition: NoTransition()

        MDScreen:
            name: 'home'
            md_bg_color: self.theme_cls.backgroundColor
            
            MDBoxLayout:
                pos_hint: {'y': 0.2}
                width: self.parent.width
                height: self.parent.height
                orientation: 'vertical'
                padding: '20dp'
                spacing: '20dp'

                MDLabel:
                    text: 'Welcome to WÄ™drowny Planer'
                    halign: 'center'
                    font_style: 'Display'
                    role: 'small'
                
                MDCard:
                    orientation: 'vertical'
                    padding: '15dp'
                    size_hint: 1, None
                    height: '100dp'

                    MDLabel:
                        id: task_stats
                        text: 'Loading tasks statistics...'
                        halign: 'center'
        
        MDScreen:
            md_bg_color: self.theme_cls.backgroundColor
            name: 'calender'
            
            MDBoxLayout:
                orientation: 'vertical'
                padding: '10dp'
                size_hint: 1, 1
            
                MDLabel:
                    text: 'Calender'
                    halign: 'center'
                    size_hint_y: None
                    height: '50dp'
                
                ScrollView:
                    do_scroll_x: True
                    do_scroll_y: True
                    size_hint: 1, 1
            
                    MDBoxLayout:
                        id: calendar_container
                        orientation: 'vertical'
                        size_hint: 0.8, None
                        height: self.minimum_height
                        padding: '5dp'
        
        MDScreen:
            md_bg_color: self.theme_cls.backgroundColor
            name: 'todo'

            MDFloatLayout:
                MDTextField:
                    id: search_field
                    pos_hint: {'center_x': 0.5, 'y': 0.9}
                    size_hint: 0.9, 0.05
                    hint_text: 'Search tasks...'
                    on_text: app.search_task(self.text)

                ScrollView:
                    pos_hint: {'center_x': 0.5, 'y': 0.1}
                    size_hint: 0.9, 0.8
                
                    MDList:
                        id: container
                
                MDFabButton:
                    icon: 'plus-thick'
                    on_release: app.show_task_dialog()
                    elevation_normal: 12
                    pos_hint: {'x': 0.8, 'y': 0.15}
                    theme_shadow_color: 'Custom'
                    shadow_color: 'olive'
        
        MDScreen:
            md_bg_color: self.theme_cls.backgroundColor
            name: 'settings'
            
            MDBoxLayout:
                orientation: 'vertical'
                spacing: '20dp'
                padding: '20dp'
                pos_hint: {'center_x': 0.7, 'center_y': 0.7}
                size_hint: 0.9, None
                height: self.minimum_height

                MDButton:
                    on_release: app.toggle_theme()
                    size_hint: 1, None
                    height: '48dp'

                    MDButtonText:
                        text: 'Toggle Theme (Dark/Light)'
                    
                MDButton:
                    on_release: app.clear_tasks()
                    size_hint: 1, None
                    height: '48dp'

                    MDButtonText:
                        text: 'Clear All Tasks'

                MDButton:
                    on_release: app.exit_app()
                    size_hint: 1, None
                    height: '48dp'

                    MDButtonText:
                        text: 'Exit App'

    NavBar:
        size_hint: 1, 0.1
        pos_hint: {'x': 0, 'y': 0}
        elevation: 10
        md_bg_color: 'olive'

        MDGridLayout:
            cols: 4
            size_hint_x: 0.9
            spacing: 8
            pos_hint: {'x': 0.03, 'y': -0.05}

            MDIconButton:
                id: nav_icon1
                icon: 'home'
                ripple_scale: 0
                size: '85sp', '60sp'
                theme_text_color: 'Custom'
                text_color: 1, 1, 1, 1
                on_release:
                    scr.current = 'home'
                    app.change_color(self)
            
            MDIconButton:
                id: nav_icon2
                icon: 'calendar-blank'
                ripple_scale: 0
                size: '85sp', '60sp'
                theme_text_color: 'Custom'
                text_color: 0, 0, 0, 1
                on_release:
                    scr.current = 'calender'
                    app.change_color(self)
            
            MDIconButton:
                id: nav_icon3
                icon: 'order-bool-ascending-variant'
                ripple_scale: 0
                size: '85sp', '60sp'
                theme_text_color: 'Custom'
                text_color: 0, 0, 0, 1
                on_release:
                    scr.current = 'todo'
                    app.change_color(self)
            
            MDIconButton:
                id: nav_icon4
                icon: 'cog'
                ripple_scale: 0
                size: '85sp', '60sp'
                theme_text_color: 'Custom'
                text_color: 0, 0, 0, 1
                on_release:
                    scr.current = 'settings'
                    app.change_color(self)

<ListItemWithCheckbox>:
    adaptive_height: True
    id: list_item
    orientation: 'horizontal'

    MDCheckbox:
        id: check
        pos_hint: {'x': 0.05, 'center_y': 0.5}
        on_release:
            root.mark()
    
    MDBoxLayout:
        orientation: 'vertical'
        pos_hint: {'x': 0.15, 'center_y': 0.5}
        size_hint: 0.75, 0.5

        MDLabel:
            id: task_label
            size_hint_y: 0.75
            max_width: '1dp'
            multiline: True
            text: ''
            markup: True
        
        MDLabel:
            id: task_date_label
            size_hint_y: 0.25
            max_width: '1dp'
    
    MDIconButton:
        icon: 'trash-can-outline'
        pos_hint: {'x': 0.87, 'center_y': 0.5}
        on_release:
            root.delete_items()
